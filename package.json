{
  "name": "ai-voice-calling-platform",
  "version": "1.0.0",
  "description": "AI-powered voice calling platform with Hindi-English support",
  "private": true,
  "workspaces": [
    "apps/*",
    "services/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules",
    "dev:website": "npm run dev --workspace=apps/website",
    "dev:admin": "npm run dev --workspace=apps/admin",
    "dev:ai-brain": "npm run dev --workspace=services/ai-brain",
    "build:website": "npm run build --workspace=apps/website",
    "build:admin": "npm run build --workspace=apps/admin",
    "build:ai-brain": "npm run build --workspace=services/ai-brain",
    "db:generate-types": "supabase gen types typescript --project-id $SUPABASE_PROJECT_ID > database/types.ts",
    "docker:dev": "docker-compose -f infrastructure/docker/docker-compose.yml up",
    "docker:prod": "docker-compose -f infrastructure/docker/docker-compose.prod.yml up -d"
  },
  "devDependencies": {
    "rimraf": "^5.0.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "packageManager": "npm@10.0.0"
}
